<html>
  <head>
      <%- include ../partials/head %>
  </head>
  <body>
      <%- include ../partials/header %>
    <h1>File Upload</h1>
    <form
    id="form"
      action='/uploadHeader' 
      method='post' 
      encType="multipart/form-data">
      <input type="file" id="file" name="myphoto" multiple/>
      
  </form>  
  <% for(var i=0;i<images.length;i++){%>
      <% if(images[i].destination === './public/uploads/header/'){%>
        
        <img src="/uploads/header/<%=images[i].filename%>" width="100" height="100">
        <a href="/home/list-footer/remove/<%=images[i]._id%>" style="color:red">X</a> <br/>
        <%}}%>
  
        <%- include ../partials/footer %>
        <script type="text/javascript">
          document.getElementById("file").onchange = function() {
          document.getElementById("form").submit();
          };
    </script>
  </body>
</html>