<html>
  <head>
      <%- include ../partials/head %>
  </head>
  <body>
    <header><%- include ../partials/header %></header>  
    
    <h1>File Upload</h1>
    <form
      action='/uploadSlide' 
      method='post' 
      encType="multipart/form-data">
      <input type="file" name="myphoto" multiple/>
      <input type='submit' value='Ngarkoni Foto!' />
  </form>  
  <% for(var i=0;i<images.length;i++){%>
      <% if(images[i].destination === './public/uploads/slide/'){%>
        <form action="/remove" method="delete">
        <img src="/uploads/slide/<%=images[i].filename%>" width="100" height="100">
        <input type="button" value="X">
        </form>
        <%}}%>
  <footer><%- include ../partials/footer %></footer>
  </body>
</html>