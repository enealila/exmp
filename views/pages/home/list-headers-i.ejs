      </div>
<div>
    <h1> Upload Header</h1>
    <form
    id="form"
      action='/layout-images/uploadHeader' 
      method='post' 
      encType="multipart/form-data">
      <input type="file" id="file" name="myphoto" multiple/>
      
  </form>  
  <% for(var i=0;i<images.length;i++){%>
      <% if(images[i].destination === './public/uploads/header/'){%>
        <img src="/uploads/header/<%=images[i].filename%>" width="100" height="100">
        <a href="/home/layout-image/list-headers/remove/<%=images[i]._id%>" style="color:red">X</a> <br/>
        <%}}%>
    </div>
        <%- include ../partials/footer %>
        <script type="text/javascript">
          document.getElementById("file").onchange = function() {
          document.getElementById("form").submit();
          };
    </script>
