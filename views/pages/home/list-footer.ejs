
    
    <%- include ./layout%>
    <h1> Upload Footer</h1>
    <form
    id="form"
       name="upload"
      action='/uploadFooter' 
      method='post' 
      encType="multipart/form-data">
      <input type="file" id="file"  name="myphoto" value="Ngarkoni Foto" multiple/>
      
  </form>  
  <table>
      <tr>
      <% for(var i=0;i<images.length;i++){%>
          <% if(images[i].destination === './public/uploads/footer/'){%>
      <td>
          <img src="/uploads/footer/<%=images[i].filename%>" width="100" height="100">
          <a href="/home/list-footer/remove/<%=images[i]._id%>" style="color:red">X</a> <br/>
      </td>
      <%}}%>
    </tr>
  </table>

          
        
       
  <footer><%- include ../partials/footer %></footer>
  <script type="text/javascript">
      document.getElementById("file").onchange = function() {
      document.getElementById("form").submit();
      };
      </script>
      