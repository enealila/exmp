

<%- include ./layout-image%>
    <h1> Upload Header</h1>
    <form
    id="form"
      action='/layout-image/uploadHeaderi' 
      method='post' 
      encType="multipart/form-data">
      <input type="file" id="file" name="myphoto" multiple/>
      
  </form>
 
  <table>
    <tr>
        <% for(var i=0;i<images.length;i++){%>
            <% if(images[i].destination === './public/uploads/header/'){%>
      <td>
          <img src="/uploads/header/<%=images[i].filename%>" width="100" height="100">
          <a href="/home/layout-image/list-headers/remove/<%=images[i]._id%>" style="color:red">X</a> <br/>
          <a id="link" href="/home/layout-image/save/:<%=images[i].filename%>"></a>
      </td>
     
      <%}}%>
    </tr>
  </table>

       
    </div>
        <%- include ../partials/footer %>
        <script type="text/javascript">
          document.getElementById("file").onchange = function() {
          document.getElementById("form").submit();
          document.getElementById("link").click();
          };
    </script>
